<%- include('layouts/main', { title: blog.title }) %>
<h1><%= blog.title %></h1>
<p><%= blog.body %></p>
<small>By <%= blog.user.name %> on <%= new Date(blog.createdAt).toDateString() %></small>
<br>
<a href="/blogs/<%= blog._id %>/edit" class="btn btn-secondary">Edit</a>
<form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" style="display: inline">
  <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a href="/blogs" class="btn btn-primary">Back to Blogs</a>