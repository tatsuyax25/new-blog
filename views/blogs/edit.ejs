<%- include('layouts/main', { title: 'Edit Blog' }) %>
<h1>Edit Blog</h1>
<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" class="form-control" value="<%= blog.title %>" required>
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    <textarea id="body" name="body" class="form-control" rows="10" required><%= blog.body %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>